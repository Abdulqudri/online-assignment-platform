

    <div class="container">
        <h1>Provide Feedback</h1>
        <form class="feedback-form" id="feedback-form">
            <div>
                <label for="student-id">Student ID:</label>
                <input type="text" id="student-id" name="student-id" required readonly>
            </div>
            <div>
                <label for="assignment-title">Assignment Title:</label>
                <input type="text" id="assignment-title" name="assignment-title" required readonly>
            </div>
            <div>
                <label for="feedback">Feedback:</label>
                <textarea id="feedback" name="feedback" placeholder="Write your feedback here..." required></textarea>
            </div>
            <div>
                <label for="grade">Grade:</label>
                <select id="grade" name="grade" required>
                    <option value="">Select Grade</option>
                    <option value="A+">A+</option>
                    <option value="A">A</option>
                    <option value="B+">B+</option>
                    <option value="B">B</option>
                    <option value="C+">C+</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
            </div>
            <button type="submit">Submit Feedback</button>
        </form>
        <div class="success-message" id="success-message">
            Feedback submitted successfully!
        </div>
    </div>

    <script>
        // Simulated submission data (replace with real data from back-end or URL parameters)
        const submissionDetails = {
            studentId: "20231001",
            assignmentTitle: "Assignment 1"
        };

        // Populate the form fields with submission data
        document.getElementById('student-id').value = submissionDetails.studentId;
        document.getElementById('assignment-title').value = submissionDetails.assignmentTitle;

        // Form submission handling
        const feedbackForm = document.getElementById('feedback-form');
        const successMessage = document.getElementById('success-message');

        feedbackForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent page reload
            successMessage.style.display = 'block'; // Show success message

            // Simulate sending data to the back-end
            const feedbackData = {
                studentId: feedbackForm['student-id'].value,
                assignmentTitle: feedbackForm['assignment-title'].value,
                feedback: feedbackForm['feedback'].value,
                grade: feedbackForm['grade'].value
            };

            console.log("Feedback submitted:", feedbackData);

            // Reset the form after submission
            feedbackForm.reset();
        });
    </script>
